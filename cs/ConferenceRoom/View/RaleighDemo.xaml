<Page
    x:Class="ConferenceRoom.View.RaleighDemo"
    DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=RaleighDemoViewModel}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConferenceRoom.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock x:Name="PageTitle" Text="Cortana Raleigh Demo" Style="{StaticResource ScenarioHeaderTextStyle}"
                        IsHitTestVisible="false" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="10,12,10,12"/>

        <StackPanel Height="103">
            <Button Margin="10,10,0,10" x:Name="cmdRedAlert" Command="{Binding OpenRedAlert}" Content="Open Red Alert Demo" Width="188" />
            <!--<Button Margin="10" x:Name="cmdPPoint" Command="{Binding OpenPowerPoint}" Content="Open Demo Presentation" />-->
        </StackPanel>

    </StackPanel>
</Page>
